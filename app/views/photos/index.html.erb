<body  class="container">
<div class="page-header"></div>
<link href="https://blackrockdigital.github.io/startbootstrap-heroic-features/css/heroic-features.css" rel="stylesheet">
<link href="https://blackrockdigital.github.io/startbootstrap-heroic-features/css/bootstrap.min.css" rel="stylesheet">
<% @photos.each_with_index do |photo,i| %>
      <% if (i+1)%4 == 1 %>
        <div class="row text-center">
          <div class="col-md-3 col-sm-6 hero-feature">
                  <div class="thumbnail">
                      <%= link_to image_tag(photo.image.url(:medium), class: 'img-responsive'), photo_path(photo), target: '_blank' %>
                      <div class="caption">
                          <h3><%= link_to photo.title, photo_path(photo), target: :_blank %></h3>
                          <p>
                              <%= link_to 'Delete Photo',photo_path(photo), method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %>
                          </p>
                      </div>
                  </div>
            </div>

      <% elsif (i+1)%4 == 0 %>
        <div class="col-md-3 col-sm-6 hero-feature">
            <div class="thumbnail">
                <%= link_to image_tag(photo.image.url(:medium), class: 'img-responsive'), photo_path(photo), target: '_blank' %>
                <div class="caption">
                    <h3><%= link_to photo.title, photo_path(photo), target: :_blank %></h3>
                    <p>
                        <%= link_to 'Delete Photo',photo_path(photo), method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %>
                    </p>
                </div>
            </div>
        </div>
        </div>
      <% else %>
        <div class="col-md-3 col-sm-6 hero-feature">
            <div class="thumbnail">
                <%= link_to image_tag(photo.image.url(:medium), class: 'img-responsive'), photo_path(photo), target: '_blank' %>
                <div class="caption">
                    <h3><%= link_to photo.title, photo_path(photo), target: :_blank %></h3>
                    <p>
                        <%= link_to 'Delete Photo',photo_path(photo), method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %>
                    </p>
                </div>
            </div>
        </div>
      <% end %>
<% end %>
</body>